
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.picture %>);">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>

  <div class="container mt-3">
  <!--   <div class="d-flex"> -->
  <div class="cards">

     <% @plants.each do |plant| %>
        <div class="mr-3">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= plant.picture %>")>
            <div><%= plant.species %></div>
          </div>
        <div class="text-right trash">
           <%= link_to plant_path(plant),
                    method: :delete,
                    data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </div>
        </div>
      <% end %>

  </div>
   <!--  </div> -->
    <%= link_to "Add a plant", new_garden_plant_path(@garden), class: "btn btn-primary mt-3" %>
  </div>
